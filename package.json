{
  "name": "website",
  "version": "1.0.0",
  "description": "apps for my self hosted website",
  "homepage": "karibu.maishatu.com",
  "workspaces": [
    "self-host/*",
    "firebase/*",
    "packages/*"
  ],
  "scripts": {
    "typecheck": "turbo run typecheck --filter=./self-host",
    "prepare": "husky",
    "lint": "turbo lint -- --fix --cache --cache-location node_modules/.cache/.eslintcache",
    "lint:fix": "turbo lint:fix -- --fix --cache --cache-location node_modules/.cache/.eslintcache",
    "eslint:report": "pnpm -r --stream run eslint:report",
    "prettier:report": "prettier \"**/*.{js,jsx,tsx,ts,scss,json}\" --check",
    "prettier": "turbo prettier -- --cache --cache-location node_modules/.cache/.prettiercache"
  },
  "author": {
    "name": "Paul Mwangi Gathondu",
    "email": "paulgathondudev@gmail.com",
    "url": "https://github.com/paulgsc"
  },
  "license": "MIT",
  "keywords": [
    "portfolio",
    "website",
    "opensource",
    "nopaywall",
    "no-sign-up-wall",
    "nextjs",
    "rust"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/paulgsc/website"
  },
  "bugs": {
    "url": "https://github.com/paulgsc/website/issues",
    "email": "paulgathondudev@gmail.com"
  },
  "funding": [
    {
      "type": "patreon",
      "url": "https://www.patreon.com/pgdev"
    },
    {
      "type": "Buy me a coffee",
      "url": "https://www.buymeacoffee.com/pgdev"
    }
  ],
  "dependencies": {
    "postcss": "^8.4.39",
    "pretty-quick": "^4.0.0",
    "tailwindcss": "^3.4.4",
    "tailwindcss-animate": "^1.0.7",
    "tsx": "^4.16.2",
    "turbo": "^2.0.6",
    "website": "link:"
  },
  "devDependencies": {
    "@commitlint/cli": "19.3.0",
    "@commitlint/config-conventional": "19.2.2",
    "@eslint/js": "^9.7.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.3.1",
    "@types/chrome": "^0.0.268",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "@vitejs/plugin-react-swc": "^3.7.0",
    "autoprefixer": "^10.4.19",
    "better-sqlite3": "^11.1.2",
    "cross-env": "^7.0.3",
    "eslint": "9.7.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-next": "14.2.5",
    "eslint-config-prettier": "9.1.0",
    "eslint-config-turbo": "^2.0.6",
    "eslint-import-resolver-typescript": "3.6.1",
    "eslint-plugin-deprecation": "^3.0.0",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-json": "4.0.0",
    "eslint-plugin-jsx-a11y": "6.9.0",
    "eslint-plugin-mdx": "^3.1.5",
    "eslint-plugin-no-relative-import-paths": "^1.5.5",
    "eslint-plugin-prettier": "5.1.3",
    "eslint-plugin-react": "7.34.4",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-require-path-exists": "1.1.9",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tailwindcss": "^3.17.4",
    "eslint-plugin-unicorn": "^54.0.0",
    "eslint-plugin-unused-imports": "^4.0.0",
    "glob": "^11.0.0",
    "globals": "^15.8.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "postcss": "^8.4.39",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "stylelint": "16.7.0",
    "stylelint-config-standard": "36.0.1",
    "stylelint-order": "6.0.4",
    "stylelint-selector-bem-pattern": "4.0.0",
    "tailwindcss": "^3.4.4",
    "tsc-files": "^1.1.4",
    "tslib": "^2.6.3",
    "tsx": "4.15.7",
    "turbo": "^2.0.6",
    "typescript": "^5.5.3",
    "typescript-eslint": "^7.16.0"
  },
  "lint-staged": {
    "**/*.{js,mjs,ts,tsx,md,mdx}": [
      "eslint --fix",
      "prettier --check --write"
    ],
    "**/*.css": [
      "stylelint --allow-empty-input",
      "prettier --write"
    ],
    "**/*.{json,yml}": [
      "prettier --check --write"
    ],
    "**/*.{scss,html}": [
      "prettier --write"
    ],
    "**/*.{ts,tsx}": [
      "tsc-files"
    ]
  }
}
