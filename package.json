  },
  "funding": [
    {
      "type": "patreon",
      "url": "https://www.patreon.com/pgdev"
    },
    {
      "type": "Buy me a coffee",
      "url": "https://www.buymeacoffee.com/pgdev"
    }
  ],
  "dependencies": {
    "postcss": "^8.4.38",
    "pretty-quick": "^4.0.0",
