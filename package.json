  "workspaces": [
    "self-host/*",
    "firebase/*",
    "packages/*"
  ],
  "scripts": {
    "lint": "turbo run lint --filter=./self-host",
    "lint:fix": "turbo run lint:fix --filter=./self-host",
    "typecheck": "turbo run typecheck --filter=./self-host",
    "prepare": "husky install"
  },
  "author": {
